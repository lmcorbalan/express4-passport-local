doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    title= title
    //bower:css
    link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')
    //endbower

    block css
      link(rel='stylesheet', href='/css/style.css')

    script(src='http://localhost:35729/livereload.js')
  body
    - if (!no_menu)
      nav.navbar.navbar-inverse(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Staff's Wiki
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a(href='/list') Personal
              li
                a(href='/employee/new') Nuevo Miembro
            - if (user)
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='/logout')
                    span.glyphicon.glyphicon-log-out
    .container
      - if ( messages.info || messages.success)
        div(class="alert alert-success" role="alert")=messages.info || messages.success
      - if ( messages.error )
        div(class="alert alert-danger" role="alert")=messages.error
      block content

    //bower:js
    script(src='/components/jquery/dist/jquery.js')
    script(src='/components/bootstrap/dist/js/bootstrap.js')
    //endbower

    block js
